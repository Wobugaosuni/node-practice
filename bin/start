#!/usr/bin/env node --harmony
'use strict'

const commander = require('commander')

// 定义文件路径
process.env.NODE_PATH = __dirname + '/../node_modules/'

// console.log('__dirname:', __dirname)  // /Users/qiuxia/code/node/node-practice/bin
// console.log('process.env.NODE_PATH:', process.env.NODE_PATH)  // /Users/qiuxia/code/node/node-practice/bin/../node_modules/

// 定义当前版本
commander
  .version(require('../package.json').version)

// 定义执行文件
commander
  .command('zip')
  .action(() => {
    require('../command/zip.js')()  // 函数自执行
  })

commander
  .command('fs1')
  .action(() => {
    require('../command/fs1')()
  })
commander
  .command('fs2')
  .action(() => {
    require('../command/fs2')()
  })
commander
  .command('fs3')
  .action(() => {
    require('../command/fs3')()
  })
commander
  .command('fs4')
  .action(() => {
    require('../command/fs4')()
  })
commander
  .command('fs5')
  .action(() => {
    require('../command/fs5')()
  })
commander
  .command('fs6')
  .action(() => {
    require('../command/fs6')()
  })
commander
  .command('fs7')
  .action(() => {
    require('../command/fs7')()
  })
commander
  .command('fs8')
  .action(() => {
    require('../command/fs8')()
  })
commander
  .command('dns')
  .action(() => {
    require('../command/dns')()
  })
commander
  .command('http')
  .action(() => {
    require('../command/http')()
  })
commander
  .command('url')
  .action(() => {
    require('../command/url')()
  })
commander
  .command('querystring')
  .action(() => {
    require('../command/querystring')()
  })

// 处理参数
const args = commander.parse(process.argv)

// console.log('process.argv:', process.argv)  // [ '/Users/qiuxia/.nvm/versions/node/v8.11.2/bin/node', '/Users/qiuxia/.nvm/versions/node/v8.11.2/bin/mynode', 'zip' ]

// 提供帮助信息
if (!commander.args.length) {
  commander.help()
}
